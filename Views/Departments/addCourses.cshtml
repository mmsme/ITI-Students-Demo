@model List<ITI_Students_Demo.Models.Course>
@{
    ViewBag.Title = "Add Courses";
}

<h2>Add Courses To @ViewBag.dept.DeptName</h2>
<form method="post">
    <table class="table">
        <tr class="thead-dark">
            <th>Course Name</th>
            <th>Add</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CourseName</td>
                <td>@Html.CheckBox("crs." + item.CourseId.ToString())</td>
            </tr>
        }
    </table>
    <input type="submit" class="btn btn-success" value="Add" />
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })
</form>